<form class="container mt-5 needs-validation" action="/records">
  <div class="form-group row justify-content-between">
    {{!-- filter switch for category --}}
    <div class="filter col-md-3 my-1">
      <div class="card mb-3" id="category-filter">
        <div class="card-header bg-secondary text-light">
          篩 選 類 別
        </div>
        <div class="card card-body container">
          <div id="options" class="row">
            {{#each checkedCategories}}
            <div class="custom-control custom-switch col-4 col-md-6 pb-3">
              <input type="checkbox" class="custom-control-input" id="customSwitch{{this._id}}" name="filter"
                value="{{this._id}}" checked>
              <label class="custom-control-label" for="customSwitch{{this._id}}">{{this.title}}</label>
            </div>
            {{/each}}
            {{#each otherCategories}}
            <div class="custom-control custom-switch col-4 col-md-6 pb-3">
              <input type="checkbox" class="custom-control-input" id="customSwitch{{this._id}}" name="filter"
                value="{{this._id}}">
              <label class="custom-control-label" for="customSwitch{{this._id}}">{{this.title}}</label>
            </div>
            {{/each}}
          </div>
          <div id="all-none-btn" class="btn-group mt-3" role="group" aria-label="all-none-btn">
            <button id="selectAll" type="button" class="btn btn-outline-dark">選擇全部</button>
            <button id="clearAll" type="button" class="btn btn-outline-dark">清除全部</button>
          </div>
        </div>
      </div>
    </div>

    {{!-- filter select for month --}}
    <div class="filter-month col-md-3 my-1">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text bg-secondary text-light" for="filter-month">
            <i class="fas fa-calendar-day"></i>
          </label>
        </div>
        <select class="custom-select" id="filter-month" name="month">
          <option value="" selected>篩 選 月 份...</option>
          <option value="01" {{#is month "01"}} selected {{/is}}>一月</option>
          <option value="02" {{#is month "02"}} selected {{/is}}>二月</option>
          <option value="03" {{#is month "03"}} selected {{/is}}>三月</option>
          <option value="04" {{#is month "04"}} selected {{/is}}>四月</option>
          <option value="05" {{#is month "05"}} selected {{/is}}>五月</option>
          <option value="06" {{#is month "06"}} selected {{/is}}>六月</option>
          <option value="07" {{#is month "07"}} selected {{/is}}>七月</option>
          <option value="08" {{#is month "08"}} selected {{/is}}>八月</option>
          <option value="09" {{#is month "09"}} selected {{/is}}>九月</option>
          <option value="10" {{#is month "10"}} selected {{/is}}>十月</option>
          <option value="11" {{#is month "11"}} selected {{/is}}>十一月</option>
          <option value="12" {{#is month "12"}} selected {{/is}}>十二月</option>
        </select>
      </div>
    </div>

    {{!-- search bar --}}
    <div class="search col-md-3 my-1">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text bg-secondary text-light" id="search-bar">
            <i class="fas fa-search"></i>
          </span>
        </div>
        <input type="text" name="keyword" class="form-control" placeholder="搜 尋 名 稱..." value="{{keyword}}"
          aria-label="keyword" aria-describedby="search-bar">
      </div>
    </div>

    {{!-- sort select --}}
    <div class="sort col-md-3 my-1">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text bg-secondary text-light" for="sort">
            <i class="fas fa-sort-amount-down"></i>
          </label>
        </div>
        <select class="custom-select" id="sort" name="sort">
          <option value="" selected>排 序 方 式...</option>
          <option value="asc" {{#is sort "asc"}} selected {{/is}}>金額遞增</option>
          <option value="desc" {{#is sort "desc"}} selected {{/is}}>金額遞減</option>
        </select>
      </div>
    </div>

    <div class="col-md my-1">
      <button type="submit" class="btn btn-dark">Submit</button>
    </div>
  </div>
</form>

<div class="container my-5">
  {{!-- Total amount --}}
  <div class="alert alert-warning row" role="alert" id="total-amount">
    <big class="col-4">總金額</big>
    <h1 class="h1 col-8">{{totalAmount}}</h1>
  </div>

  {{!-- Record list --}}
  <ul class="list-group list-group-flush" id="record-list">
    {{#each records}}
    <li class="list-group-item list-group-item-action row d-flex">
      <div class="col-8 d-flex justify-content-between align-items-center">
        <div class="desc d-flex justify-content-between align-items-center">
          <h1 class="category mr-3 text-secondary">
            {{{ this.category.icon }}}
          </h1>
          <div class="detail">
            <h4 class="name mb-0">{{this.name}}</h4>
            <small class="date text-muted">{{this.date}}</small>
          </div>
        </div>
        <big class="amount">{{this.amount}}</big>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <!-- Edit Button -->
        <a class="btn btn-primary mr-2" href="/records/{{this._id}}/edit" role="button">編 輯</a>

        <!-- Delete Button trigger modal -->
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal-{{this._id}}">
          刪 除
        </button>
      </div>
    </li>
    {{/each}}
  </ul>
</div>

<!-- Delete Modal -->
{{#each records}}
<div class="modal fade" id="deleteModal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <big class="modal-body">
        確定要刪除 <strong>{{this.name}}</strong> 嗎？
      </big>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取 消</button>
        <form action="/records/{{this._id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">確認刪除</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}